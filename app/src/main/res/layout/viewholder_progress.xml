<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/viewholder_progress_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:gravity="center"
    android:orientation="horizontal">

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/viewholder_progress_circular_progress"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="8dp"
        app:matProg_barColor="@android:color/black"
        app:matProg_progressIndeterminate="true"/>

    <hu.telekom.ots.views.TypefaceTextView
        android:id="@+id/viewholder_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>

</LinearLayout>